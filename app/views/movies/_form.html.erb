<%= simple_form_for @movie do |f| %>
  <%= f.input :name, label: "Movie Name:" %>
  <%= f.input :description %>
   <%= f.input :release, as: :date, start_year: Date.today.year - 50,
                              end_year: Date.today.year , discard_day: true,
                              order: [:month, :year] %>
   <%= f.input :rating, collection: 1..10 %>
   <%= f.button :submit, class: "btn btn-success" %>
<% end %>